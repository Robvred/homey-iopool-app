{
  "id": "com.iopool.api",
  "sdk": 3,
  "name": {
    "en": "iopool Pool Monitor",
    "fr": "Moniteur iopool"
  },
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "description": {
    "en": "Monitor your iopool pool in Homey",
    "fr": "Surveillez votre bassin iopool dans Homey"
  },
  "author": {
    "name": "Robvred"
  },
  "category": "appliances",
  "permissions": [],
  "drivers": [
    {
      "id": "iopool",
      "name": {
        "en": "iopool Pool",
        "fr": "Piscine iopool"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_ph",
        "measure_orp",
        "filtration_duration",
        "pool_mode",
        "alarm_generic"
      ],
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "options": { "singular": true },
          "navigation": { "next": "add_my_devices" }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices",
          "navigation": { "prev": "list_my_devices" }
        }
      ]
    }
  ]
}
