{
  "name": {
    "en": "iopool Pool",
    "fr": "Piscine iopool"
  },
  "class": "sensor",
  "icon": "drivers/iopool/assets/icon.svg",
  "images": {
    "large": "drivers/iopool/assets/large.png",
    "small": "drivers/iopool/assets/small.png",
    "xlarge": "drivers/iopool/assets/xlarge.png"
  },
  "capabilities": [
    "measure_temperature",
    "measure_ph",
    "measure_orp",
    "filtration_duration",
    "pool_mode",
    "alarm_generic"
  ],
  "defaultCapabilities": [
    "measure_temperature"
  ],
  "capabilitiesOptions": {
    "measure_temperature": {
      "units": "°C",
      "decimals": 2
    },
    "measure_ph": {
      "units": "pH",
      "decimals": 1
    },
    "measure_orp": {
      "units": "mV",
      "decimals": 0
    },
    "filtration_duration": {
      "units": "min",
      "decimals": 0,
      "preventInsights": true,
      "icon": "drivers/iopool/assets/icons/clock.svg"
    },
    "pool_mode": {
      "preventInsights": true
    }
  },
  "pair": [
    {
      "id": "list_my_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "add_my_devices"
      }
    },
    {
      "id": "add_my_devices",
      "template": "add_devices",
      "navigation": {
        "prev": "list_my_devices"
      }
    }
  ],
  "settings": [
    {
      "id": "apiKey",
      "type": "password",
      "label": {
        "en": "API Key",
        "fr": "Clé API"
      },
      "hint": {
        "en": "Your iopool API token",
        "fr": "Votre jeton iopool"
      }
    },
    {
      "id": "poolId",
      "type": "text",
      "label": {
        "en": "Pool ID",
        "fr": "ID de la piscine"
      },
      "hint": {
        "en": "Pool identifier",
        "fr": "Identifiant du bassin"
      }
    },
    {
      "id": "refreshMinutes",
      "type": "number",
      "label": {
        "en": "Refresh interval (minutes)",
        "fr": "Intervalle de rafraîchissement (minutes)"
      },
      "min": 1,
      "max": 60,
      "step": 1,
      "value": 5
    }
  ]
}
