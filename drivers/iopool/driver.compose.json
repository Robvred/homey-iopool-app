{
  "name": {
    "en": "iopool Pool",
    "fr": "Piscine iopool"
  },
  "class": "sensor",
  "icon": "drivers/iopool/assets/icon.svg",
  "images": {
    "large": "drivers/iopool/assets/large.png",
    "small": "drivers/iopool/assets/small.png",
    "xlarge": "drivers/iopool/assets/xlarge.png"
  },
  "capabilities": [
    "measure_temperature",
    "measure_ph",
    "measure_orp",
    "filtration_duration",
    "pool_mode",
    "alarm_generic"
  ],
  "defaultCapabilities": ["measure_temperature"],
  "capabilitiesOptions": {
    "measure_temperature": { "units": "°C", "decimals": 2 },
    "measure_ph": { "units": "pH", "decimals": 1 },
    "measure_orp": { "units": "mV", "decimals": 0 },
    "filtration_duration": {
      "units": "h",
      "decimals": 1,
      "preventInsights": true,
      "icon": "drivers/iopool/assets/icons/clock.svg"
    },
    "pool_mode": { "preventInsights": true }
  },
  "pair": [
    { "id": "pair" }
  ],
  "settings": [
    {
      "id": "apiKey",
      "type": "password",
      "label": { "en": "API Key", "fr": "Clé API" },
      "hint": { "en": "Your iopool API key", "fr": "Votre clé API iopool" },
      "value": ""
    },
    {
      "id": "poolId",
      "type": "text",
      "label": { "en": "Pool ID", "fr": "ID de la piscine" },
      "hint": { "en": "Your pool identifier", "fr": "Identifiant de votre piscine" },
      "value": ""
    },
    {
      "id": "pollingInterval",
      "type": "number",
      "label": {
        "en": "Polling interval (minutes)",
        "fr": "Intervalle de polling (minutes)"
      },
      "value": 30,
      "min": 15,
      "max": 60
    }
  ]
}
